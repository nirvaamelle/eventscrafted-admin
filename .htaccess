RewriteEngine On

# Redirect requests with .php to the URL without .php
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^.]+)\.php\ HTTP/
RewriteRule ^([^.]+)\.php$ /$1 [R=301,L]

# Internally map requests without .php to the corresponding .php file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]
